# ==========================================
# CONFIGURAÇÃO DE STAGING
# ==========================================

# Application
APP_NAME="Link Chart Staging"
APP_ENV=staging
APP_KEY=base64:staging-key-will-be-generated
APP_DEBUG=false
APP_URL=https://staging.linkchartapi.com
FRONTEND_URL=https://staging-frontend.vercel.app

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

# Performance
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging - Staging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database - PostgreSQL para staging
DB_CONNECTION=pgsql
DB_HOST=database
DB_PORT=5432
DB_DATABASE=linkchartstaging
DB_USERNAME=linkchartuser
DB_PASSWORD=staging-secure-password-here

# Session - Redis para staging
SESSION_DRIVER=redis
SESSION_LIFETIME=720
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.linkchartapi.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Broadcasting
BROADCAST_CONNECTION=redis

# Filesystem
FILESYSTEM_DISK=s3

# Queue - Redis para staging
QUEUE_CONNECTION=redis

# Cache - Redis para staging
CACHE_STORE=redis
CACHE_PREFIX=linkchartstaging

# Redis - Staging
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=staging-redis-password
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# Mail - Staging (Mailgun sandbox)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=staging-mailgun-username
MAIL_PASSWORD=staging-mailgun-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="staging@linkchartapi.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 - Staging bucket
AWS_ACCESS_KEY_ID=staging-aws-access-key
AWS_SECRET_ACCESS_KEY=staging-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=linkchartfiles-staging
AWS_USE_PATH_STYLE_ENDPOINT=false

# JWT - Staging
JWT_SECRET=staging-jwt-secret-here
JWT_TTL=720
JWT_REFRESH_TTL=10080
JWT_ALGO=HS256

# Rate Limiting - Staging
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=200
RATE_LIMIT_DECAY_MINUTES=1

# CORS - Staging
SANCTUM_STATEFUL_DOMAINS=staging-frontend.vercel.app
