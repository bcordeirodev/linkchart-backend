# ===========================================
# CONFIGURAÇÃO DE PRODUÇÃO - DIGITALOCEAN
# ===========================================

# Application
APP_NAME="Link Chart"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE_GENERATE_WITH_ARTISAN_KEY_GENERATE
APP_DEBUG=false
APP_URL=https://your-domain.com
FRONTEND_URL=https://your-frontend.vercel.app

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

# Performance
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=8
BCRYPT_ROUNDS=12

# Logging - Otimizado para produção
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database - PostgreSQL otimizado para produção
DB_CONNECTION=pgsql
DB_HOST=database
DB_PORT=5432
DB_DATABASE=linkchartprod
DB_USERNAME=linkchartuser
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# Session - Otimizada para produção
SESSION_DRIVER=redis
SESSION_LIFETIME=1440
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.your-domain.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Broadcasting
BROADCAST_CONNECTION=redis

# Filesystem - Para uploads em produção
FILESYSTEM_DISK=s3

# Queue - Redis para melhor performance
QUEUE_CONNECTION=redis

# Cache - Redis para alta performance
CACHE_STORE=redis
CACHE_PREFIX=linkchartcache

# Redis - Configuração otimizada
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# Mail - Configuração para produção
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=your-mailgun-username
MAIL_PASSWORD=your-mailgun-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 - Para armazenamento de arquivos
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=linkchartfiles
AWS_USE_PATH_STYLE_ENDPOINT=false

# JWT - Configurações de segurança
JWT_SECRET=YOUR_JWT_SECRET_HERE_GENERATE_WITH_ARTISAN_JWT_SECRET
JWT_TTL=1440
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256

# Rate Limiting - Configurações otimizadas para produção
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=100
RATE_LIMIT_DECAY_MINUTES=1

# CORS - Configuração para produção
SANCTUM_STATEFUL_DOMAINS=your-frontend.vercel.app
