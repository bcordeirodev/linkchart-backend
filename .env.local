FRONTEND_URL=http://localhost:3000

# CORS Configuration
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,https://linkchartapp.vercel.app,https://your-frontend.vercel.app"

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

# Performance
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=8
BCRYPT_ROUNDS=12

# Logging - Simplificado e funcional
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
LOG_DAILY_DAYS=30

# Database - SQLite para testes locais
DB_CONNECTION=sqlite
DB_DATABASE=/tmp/linkchartlocal.db

# Session - File para desenvolvimento local
SESSION_DRIVER=file
SESSION_LIFETIME=1440
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Broadcasting
BROADCAST_CONNECTION=sync

# Filesystem - Local
FILESYSTEM_DISK=local

# Queue - Sync para desenvolvimento local
QUEUE_CONNECTION=sync

# Cache - File para desenvolvimento local
CACHE_STORE=file
CACHE_PREFIX=linkchartcache

# Mail - Desabilitado para produção simples
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@linkchartapp.local"
MAIL_FROM_NAME="${APP_NAME}"

