# ==========================================
# CONFIGURAÇÃO DE DESENVOLVIMENTO LOCAL
# ==========================================

# Application
APP_NAME="Link Chart"
APP_ENV=local
APP_KEY=base64:your-local-key-here
APP_DEBUG=true
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

# Performance
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=10

# Logging - Development
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database - SQLite para desenvolvimento
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# Session - File para desenvolvimento
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

# Queue - Sync para desenvolvimento
QUEUE_CONNECTION=sync

# Cache - File para desenvolvimento
CACHE_STORE=file
CACHE_PREFIX=linkchartdev

# Redis - Opcional para desenvolvimento
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Mail - Log para desenvolvimento
MAIL_MAILER=log
MAIL_HOST=null
MAIL_PORT=null
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# JWT - Development
JWT_SECRET=your-jwt-secret-here
JWT_TTL=1440
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256

# Rate Limiting - Relaxed para desenvolvimento
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_ATTEMPTS=1000
RATE_LIMIT_DECAY_MINUTES=1
